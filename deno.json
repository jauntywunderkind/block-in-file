{
	"tasks": {
		"block-in-file": "deno run --allow-read --allow-write --allow-net block-in-file.ts",
		"install": "deno install -f --allow-read --allow-write --allow-net block-in-file.ts",
		"install:dir": "deno install -f --allow-read --allow-write --allow-net --root $ROOT block-in-file.ts"
	},
	"fmt": {
		"options": {
			"lineWidth": 160,
			"semiColons": false,
			"useTabs": true
		}
	}
}
